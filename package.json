{
  "name": "musica",
  "version": "1.0.0",
  "description": "Musica Offline Music Player",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "npx @tailwindcss/cli -i ./src/input.css -o ./src/style.css --watch",
    "build": "electron-builder"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  },
  "build": {
    "appId": "com.musica.player",
    "productName": "Musica",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FulDX/simple-music-player.git"
  },
  "keywords": ["music", "player", "electron", "offline"],
  "author": "Musica Dev",
  "license": "ISC"
}
